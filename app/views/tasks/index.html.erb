<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table>
<tr>
  <td>id</td>
  <td>name</td>
  <td>detail</td>
  <td>deadline_at</td>
</tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= link_to task.name, task_path(task.id) %></td>
    <td><%= task.detail %></td>
    <td><%= task.deadline_at %></td>
  </tr>
<% end %>

</table>

<p>
<%= link_to "タスク作成", new_task_path %>
</p>