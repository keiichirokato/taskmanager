<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<p>【ソート】<%= session[:sort] %>【順序】<%= session[:direction] %></p>

<table border=1>
  <thead>
    <tr>
      <th><%= link_to "id", tasks_path(:sort => "id")%></th>
      <th><%= link_to "name", tasks_path(:sort => "name")%></th>
      <th><%= link_to "detail", tasks_path(:sort => "detail")%></th>
      <th><%= link_to "deadline_at", tasks_path(:sort => "deadline_at")%></th>
    </tr>
  </thead>

  <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= link_to task.name, task_path(task.id) %></td>
          <td><%= task.detail %></td>
          <td><%= task.deadline_at %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<p>
<%= link_to "タスク作成", new_task_path %>
</p>