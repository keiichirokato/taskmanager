<%= form_for @task do |f| %>
    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>
  
    <p>
    <%= f.label :detail %>
    <%= f.text_field :detail %>
    </p>

    <p>
    <%= f.label :deadline_at %>
    <%= f.date_select :deadline_at %>
    </p>
    
    <%= f.submit %>
  
<% end %>